{
  "name": "formflow-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "FormFlow monorepo - form data handling made easy",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "nx": "nx",
    "// --- Setup ---": "",
    "setup": "npm install && npm run setup:env && echo '✓ Setup complete! Run: npm run dev'",
    "setup:env": "bash scripts/setup-dev-env.sh",
    "setup:env:copy": "if [ ! -f .env.development ] && [ ! -f .env ]; then cp .env.development.example .env.development; fi && echo '✓ Environment file ready'",
    "postinstall": "nx reset",
    "// --- Development ---": "",
    "dev": "docker-compose -f docker-compose.db.yml up -d --wait && NX_TUI=false nx run-many --target=dev --projects=dashboard-api,collector-api,dashboard-ui,test-lab --parallel=4",
    "dashboard-ui": "nx run dashboard-ui:serve",
    "dashboard-api": "nx run dashboard-api:dev",
    "collector-api": "nx run collector-api:dev",
    "test-lab": "node apps/test-lab/server.js",
    "test-lab:webhooks": "node apps/test-lab/server-webhooks.js",
    "// --- Database Seeding ---": "",
    "seed": "npx ts-node --project scripts/tsconfig.json -r tsconfig-paths/register scripts/seed-sample-data.ts",
    "// --- Environment ---": "",
    "test:env": "npx ts-node --esm scripts/test-env-config.ts",
    "// --- Build ---": "",
    "build": "nx run-many --target=build --all",
    "build:dashboard-ui": "nx build dashboard-ui",
    "build:dashboard-api": "nx build dashboard-api",
    "build:collector-api": "nx build collector-api",
    "// --- Testing ---": "",
    "test": "nx run-many --target=test --all",
    "test:watch": "nx run-many --target=test --all --watch",
    "test:coverage": "nx run-many --target=test --all --codeCoverage",
    "test:coverage:ci": "nx run-many --target=test --all --configuration=ci",
    "test:dashboard-ui": "nx test dashboard-ui",
    "test:dashboard-ui:watch": "nx test dashboard-ui --watch",
    "test:dashboard-ui:coverage": "nx test dashboard-ui --codeCoverage",
    "test:dashboard-ui:coverage:ci": "nx test dashboard-ui --configuration=ci",
    "test:dashboard-api": "nx test dashboard-api",
    "test:dashboard-api:watch": "nx test dashboard-api --watch",
    "test:dashboard-api:coverage": "nx test dashboard-api --codeCoverage",
    "test:dashboard-api:coverage:ci": "nx test dashboard-api --configuration=ci",
    "test:collector-api": "nx test collector-api",
    "test:collector-api:watch": "nx test collector-api --watch",
    "test:collector-api:coverage": "nx test collector-api --codeCoverage",
    "test:collector-api:coverage:ci": "nx test collector-api --configuration=ci",
    "test:apis": "npm run test:dashboard-api && npm run test:collector-api",
    "test:e2e": "npm run test:apis",
    "test:npm-commands": "jest --config scripts/jest.config.js scripts/npm-commands.test.ts",
    "lint": "nx run-many --target=lint --all",
    "// --- Docker (database only for dev) ---": "",
    "db:up": "docker-compose -f docker-compose.db.yml up -d",
    "db:down": "docker-compose -f docker-compose.db.yml down",
    "db:reset": "docker-compose -f docker-compose.db.yml down -v && docker-compose -f docker-compose.db.yml up -d --wait && npm run db:migrate",
    "db:destroy": "docker-compose -f docker-compose.db.yml down -v && echo '✓ Database completely wiped. Run npm run db:up to start fresh.'",
    "db:fix-types": "docker-compose -f docker-compose.db.yml exec -T postgres psql -U formflow -d formflow -c \"DO \\$\\$ DECLARE r RECORD; BEGIN FOR r IN SELECT typname, nspname FROM pg_type t JOIN pg_namespace n ON t.typnamespace = n.oid WHERE t.typtype = 'c' AND n.nspname = 'public' AND NOT EXISTS (SELECT 1 FROM pg_class c WHERE c.reltype = t.oid) LOOP EXECUTE format('DROP TYPE IF EXISTS %I.%I CASCADE', r.nspname, r.typname); END LOOP; END \\$\\$;\" && docker-compose -f docker-compose.db.yml exec -T postgres psql -U formflow -d formflow -c 'DROP TABLE IF EXISTS form_integration CASCADE;' && echo '✅ Type cleanup complete! Restart your application.'",
    "db:fix-networks": "docker-compose -f docker-compose.db.yml down && docker network prune -f && echo '✅ Network cleanup complete! Run npm run db:up to start fresh.'",
    "// --- Docker Full Stack (alternative) ---": "",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "// --- Docker Production ---": "",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:ps": "docker-compose ps",
    "// --- Docker Build ---": "",
    "docker:build": "nx run dashboard-api:docker:build && nx run collector-api:docker:build",
    "docker:build:dashboard-api": "nx run dashboard-api:docker:build",
    "docker:build:collector-api": "nx run collector-api:docker:build",
    "// --- Nx Utilities ---": "",
    "graph": "nx graph",
    "affected": "nx affected:graph",
    "affected:test": "nx affected -t test",
    "affected:build": "nx affected -t build",
    "reset": "nx reset",
    "nx:reset": "nx reset",
    "// --- Migrations ---": "",
    "db:migrate": "cd apps/dashboard-api && npm run migration:run",
    "db:migrate:revert": "cd apps/dashboard-api && npm run migration:revert",
    "db:migrate:show": "cd apps/dashboard-api && npm run migration:show",
    "db:migrate:generate": "cd apps/dashboard-api && npm run migration:generate",
    "migrate:create-super-admin": "cd apps/dashboard-api && npx ts-node -r tsconfig-paths/register src/migrations/create-initial-super-admin.ts",
    "// --- Cleanup ---": "",
    "clean": "rm -rf dist/ node_modules/.cache",
    "clean:all": "rm -rf dist/ node_modules/ apps/dashboard-ui/node_modules/ apps/dashboard-api/node_modules/ apps/collector-api/node_modules/",
    "clean:docker": "docker-compose down -v --rmi local && docker-compose -f docker-compose.dev.yml down -v --rmi local && docker-compose -f docker-compose.db.yml down -v && docker network prune -f && echo '✅ Docker cleanup complete!'",
    "docker:prune:networks": "docker network prune -f && echo '✅ Orphaned networks removed'"
  },
  "devDependencies": {
    "@nx/angular": "^22.3.3",
    "@nx/cypress": "22.3.3",
    "@nx/eslint": "^22.3.3",
    "@nx/eslint-plugin": "^22.3.3",
    "@nx/jest": "^22.3.3",
    "@nx/js": "^22.3.3",
    "@nx/node": "^22.3.3",
    "@nx/react": "^22.3.3",
    "@nx/vite": "22.3.3",
    "@nx/vitest": "22.3.3",
    "@nx/web": "22.3.3",
    "@nx/workspace": "^22.3.3",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.3.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "20.19.9",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^4.0.0",
    "@vitest/ui": "^4.0.0",
    "autoprefixer": "^10.4.23",
    "cypress": "^15.8.0",
    "eslint": "^9.39.2",
    "jest-preset-angular": "^16.0.0",
    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "nx": "^22.3.3",
    "postcss": "^8.5.6",
    "prettier": "~3.6.2",
    "tailwindcss": "^4.1.18",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "vite": "^7.0.0",
    "vitest": "^4.0.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.12.0",
    "tailwind-merge": "^3.4.0",
    "typeorm": "0.3.28",
    "uuid": "^13.0.0"
  }
}
