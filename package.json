{
  "name": "formflow-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "FormFlow monorepo - form data handling made easy",
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "nx": "nx",
    "// --- Setup ---": "",
    "setup": "pnpm install && pnpm sync-deps && pnpm setup:env && pnpm db:up && pnpm db:push && echo '✓ Setup complete! Run: pnpm dev'",
    "setup:env": "bash scripts/setup-dev-env.sh",
    "sync-deps": "pnpm exec tsx scripts/sync-deps.ts",
    "postinstall": "nx reset",
    "// --- Development ---": "",
    "dev": "docker-compose -f docker-compose.dev.yml up -d --wait --remove-orphans && NX_TUI=false nx run-many --target=dev --projects=dashboard-api,collector-api,dashboard-ui,test-lab --parallel=4",
    "dashboard-ui": "nx run dashboard-ui:serve",
    "dashboard-api": "nx run dashboard-api:dev",
    "collector-api": "nx run collector-api:dev",
    "test-lab": "node apps/test-lab/server.js",
    "// --- Database Seeding ---": "",
    "seed:integrations": "dotenvx run -f .env.seed -- pnpm exec tsx --tsconfig tsconfig.base.json scripts/seed-integrations.ts",
    "// --- Environment ---": "",
    "test:env": "pnpm exec tsx scripts/test-env-config.ts",
    "// --- Build ---": "",
    "build": "nx run-many --target=build --all",
    "build:dashboard-ui": "nx build dashboard-ui",
    "build:dashboard-api": "nx build dashboard-api",
    "build:collector-api": "nx build collector-api",
    "// --- Testing ---": "",
    "test": "nx run-many --target=test --all",
    "test:watch": "nx run-many --target=test --all --watch",
    "test:coverage": "nx run-many --target=test --all --codeCoverage",
    "test:coverage:ci": "nx run-many --target=test --all --configuration=ci",
    "test:dashboard-ui": "nx test dashboard-ui",
    "test:dashboard-ui:watch": "nx test dashboard-ui --watch",
    "test:dashboard-ui:coverage": "nx test dashboard-ui --codeCoverage",
    "test:dashboard-ui:coverage:ci": "nx test dashboard-ui --configuration=ci",
    "test:dashboard-api": "nx test dashboard-api",
    "test:dashboard-api:watch": "nx test dashboard-api --watch",
    "test:dashboard-api:coverage": "nx test dashboard-api --codeCoverage",
    "test:dashboard-api:coverage:ci": "nx test dashboard-api --configuration=ci",
    "test:collector-api": "nx test collector-api",
    "test:collector-api:watch": "nx test collector-api --watch",
    "test:collector-api:coverage": "nx test collector-api --codeCoverage",
    "test:collector-api:coverage:ci": "nx test collector-api --configuration=ci",
    "test:apis": "pnpm test:dashboard-api && pnpm test:collector-api",
    "test:e2e": "pnpm test:apis",
    "test:scripts": "pnpm exec jest --config scripts/jest.config.js scripts/package-scripts.test.ts",
    "lint": "nx run-many --target=lint --all",
    "// --- Security ---": "",
    "security:audit": "pnpm audit --audit-level=high",
    "security:check": "pnpm audit --audit-level=high && pnpm outdated",
    "// --- Docker (database only for dev) ---": "",
    "db:up": "docker-compose -f docker-compose.dev.yml up -d --remove-orphans",
    "db:down": "docker-compose -f docker-compose.dev.yml down --remove-orphans",
    "db:reset": "docker-compose -f docker-compose.dev.yml down -v --remove-orphans && docker-compose -f docker-compose.dev.yml up -d --wait --remove-orphans && pnpm db:push",
    "db:destroy": "docker-compose -f docker-compose.dev.yml down -v --remove-orphans && echo '✓ Database completely wiped. Run pnpm db:up to start fresh.'",
    "// --- Docker Full Stack (alternative) ---": "",
    "docker:dev": "docker-compose -f docker-compose.stage.yml up --build --remove-orphans",
    "docker:dev:down": "docker-compose -f docker-compose.stage.yml down --remove-orphans",
    "docker:dev:logs": "docker-compose -f docker-compose.stage.yml logs -f",
    "stage": "docker-compose -f docker-compose.stage.yml up --build --remove-orphans",
    "stage:down": "docker-compose -f docker-compose.stage.yml down --remove-orphans",
    "stage:logs": "docker-compose -f docker-compose.stage.yml logs -f",
    "// --- Docker Production ---": "",
    "prod:setup": "bash scripts/setup-prod-env.sh",
    "prod:up": "docker-compose --env-file .env.production -f docker-compose.yml up -d --remove-orphans",
    "prod:down": "docker-compose --env-file .env.production -f docker-compose.yml down --remove-orphans",
    "prod:logs": "docker-compose --env-file .env.production -f docker-compose.yml logs -f",
    "docker:up": "docker-compose up -d --remove-orphans",
    "docker:down": "docker-compose down --remove-orphans",
    "docker:logs": "docker-compose logs -f",
    "docker:ps": "docker-compose ps",
    "// --- Docker Build ---": "",
    "docker:build": "nx run dashboard-api:docker:build && nx run collector-api:docker:build",
    "docker:build:dashboard-api": "nx run dashboard-api:docker:build",
    "docker:build:collector-api": "nx run collector-api:docker:build",
    "// --- Nx Utilities ---": "",
    "graph": "nx graph",
    "affected": "nx affected:graph",
    "affected:test": "nx affected -t test",
    "affected:build": "nx affected -t build",
    "reset": "nx reset",
    "nx:reset": "nx reset",
    "// --- Database Schema (Drizzle) ---": "",
    "db:push": "dotenvx run -f .env.development -- npx drizzle-kit push --force",
    "db:generate": "dotenvx run -f .env.development -- npx drizzle-kit generate",
    "db:studio": "dotenvx run -f .env.development -- npx drizzle-kit studio",
    "// --- Cleanup ---": "",
    "clean": "rm -rf dist/ node_modules/.cache",
    "clean:all": "rm -rf dist/ node_modules/ .nx/ && find apps -name node_modules -type d -exec rm -rf {} + 2>/dev/null || true",
    "clean:docker": "docker-compose -f docker-compose.dev.yml -f docker-compose.yml -f docker-compose.stage.yml down -v --rmi all --remove-orphans && docker network prune -f && echo '✅ Docker cleanup complete!'",
    "nuke": "docker-compose -f docker-compose.dev.yml -f docker-compose.yml -f docker-compose.stage.yml down -v --rmi all --remove-orphans 2>/dev/null; docker network prune -f 2>/dev/null; rm -rf dist/ node_modules/ .nx/ package-lock.json pnpm-lock.yaml .env .env.development logs/ coverage/ && find apps -name node_modules -type d -exec rm -rf {} + 2>/dev/null; echo '✅ Project nuked! Run: pnpm run setup'",
    "cycle": "pnpm run nuke && pnpm run db:destroy && pnpm run setup && pnpm run dev",
    "docker:prune:networks": "docker network prune -f && echo '✅ Orphaned networks removed'",
    "prepare": "husky"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.52.0",
    "@nx/cypress": "22.4.2",
    "@nx/eslint": "^22.4.2",
    "@nx/eslint-plugin": "^22.4.2",
    "@nx/jest": "^22.4.2",
    "@nx/js": "22.4.2",
    "@nx/node": "^22.4.2",
    "@nx/react": "^22.4.2",
    "@nx/vite": "22.4.2",
    "@nx/vitest": "22.4.2",
    "@nx/web": "22.4.2",
    "@nx/workspace": "^22.4.2",
    "@swc-node/register": "~1.11.1",
    "@swc/core": "~1.15.11",
    "@swc/helpers": "~0.5.18",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "16.3.2",
    "@types/jest": "^30.0.0",
    "@types/node": "25.0.10",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.23",
    "cypress": "^15.9.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "0.31.8",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jiti": "2.6.1",
    "jsdom": "~27.4.0",
    "jsonc-eslint-parser": "^2.4.2",
    "lint-staged": "^16.2.7",
    "nx": "^22.4.2",
    "postcss": "^8.5.6",
    "prettier": "~3.8.1",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.4.6",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "dependencies": {
    "@eslint/js": "^9.39.2",
    "@types/nodemailer": "^7.0.9",
    "axios": "^1.13.4",
    "bs58": "^6.0.0",
    "drizzle-orm": "^0.45.1",
    "globals": "^17.2.0",
    "nodemailer": "^7.0.13",
    "pg-boss": "^12.7.1",
    "postgres": "^3.4.8",
    "reflect-metadata": "^0.2.2",
    "three": "^0.182.0",
    "typescript-eslint": "^8.54.0",
    "uuid": "^13.0.0"
  },
  "pnpm": {
    "overrides": {
      "glob": "^11.0.1",
      "inflight": "npm:lru-cache@^11.0.2",
      "keygrip": "^1.1.0",
      "whatwg-encoding": "^3.1.1",
      "html-encoding-sniffer": "^6.0.0"
    },
    "onlyBuiltDependencies": [
      "@swc/core",
      "bcrypt",
      "cypress",
      "esbuild",
      "nx",
      "unrs-resolver"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
