# =============================================================================
# FormFlow Collector API Dockerfile
# =============================================================================
# Multi-stage build for optimized production image
# =============================================================================

# -----------------------------------------------------------------------------
# Build stage - Install dependencies
# -----------------------------------------------------------------------------
FROM node:22-alpine AS builder
WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy source code (entire monorepo, filtered by .dockerignore)
# We copy EVERYTHING first so pnpm can see the workspaces and all package.json files
COPY . .

# Install dependencies (frozen lockfile for reproducibility)
# This installs dependencies for the root AND all workspaces
RUN pnpm install --frozen-lockfile

# -----------------------------------------------------------------------------
# Production stage - Minimal runtime image
# -----------------------------------------------------------------------------
FROM node:22-alpine
WORKDIR /app

# Create non-root user for security
RUN addgroup -g 1001 -S nodejs && \
  adduser -S nodejs -u 1001

# Install pnpm
RUN npm install -g pnpm

# Copy everything from builder
COPY --from=builder /app /app

# Change ownership to non-root user
RUN chown -R nodejs:nodejs /app

# Switch to non-root user
USER nodejs

# Set working directory to the app
WORKDIR /app/apps/collector-api

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3000/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# Run the application
CMD ["npx", "tsx", "src/index.ts"]
