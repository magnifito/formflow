{
  "extends": "../../tsconfig.base.json",
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "../../",
    "paths": {
      "@formflow/shared/env": [
        "libs/shared/env/src/index.ts"
      ],
      "@formflow/shared/logger": [
        "libs/shared/logger/src/index.ts"
      ],
      "@formflow/shared/telegram": [
        "libs/shared/telegram/src/index.ts"
      ],
      "@formflow/shared/queue": [
        "libs/shared/queue/src/index.ts"
      ],
      "@formflow/shared/integrations": [
        "libs/shared/integrations/src/index.ts"
      ],
      "@formflow/shared/drizzle": [
        "libs/shared/drizzle/src/index.ts"
      ]
    },
    "lib": [
      "ES2022"
    ],
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "isolatedModules": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}