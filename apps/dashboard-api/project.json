{
  "name": "dashboard-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/dashboard-api/src",
  "projectType": "application",
  "tags": [
    "type:app",
    "scope:dashboard-api"
  ],
  "targets": {
    "build": {
      "executor": "@nx/node:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/dashboard-api",
        "main": "apps/dashboard-api/src/index.ts",
        "tsConfig": "apps/dashboard-api/tsconfig.json",
        "assets": [
          "apps/dashboard-api/src"
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "serve": {
      "executor": "@nx/node:serve",
      "options": {
        "buildTarget": "dashboard-api:build"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
        "cwd": "apps/dashboard-api",
        "env": {
          "NODE_ENV": "development",
          "DASHBOARD_API_PORT": "4000",
          "DB_HOST": "localhost",
          "DB_PORT": "5433",
          "DB_USER": "formflow",
          "DB_PASSWORD": "formflow_dev_password",
          "DB_NAME": "formflow",
          "JWT_SECRET": "dev_jwt_secret_not_for_production",
          "ENCRYPTION_KEY": "dev_encryption_key_not_for_production"
        }
      }
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t formflow-dashboard-api .",
        "cwd": "apps/dashboard-api"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/dashboard-api/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        },
        "coverage": {
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ]
    }
  }
}