# =============================================================================
# FormFlow Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values for your environment.
# Never commit .env files to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3000
LOG_LEVEL=info                    # debug, info, warn, error

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
# For Docker Compose production, these are used by the postgres container
DB_NAME=formflow
DB_USER=formflow
DB_PASSWORD=your_secure_password

# Development database (used when NODE_ENV=development)
DEV_DB_HOST=localhost
DEV_DB_PORT=5433
DEV_DB_DATABASE=formflow
DEV_DB_USERNAME=formflow
DEV_DB_PASSWORD=formflow_dev_password

# Production database (used when NODE_ENV=production)
# PROD_DB_HOST=your_production_host
# PROD_DB_PORT=5432
# PROD_DB_DATABASE=formflow
# PROD_DB_USERNAME=formflow
# PROD_DB_PASSWORD=your_production_password

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=your_jwt_secret_key_min_32_chars

# -----------------------------------------------------------------------------
# CSRF Protection (Form Submissions)
# -----------------------------------------------------------------------------
# Set CSRF_SECRET to enable CSRF tokens for /submit/:submitHash
CSRF_SECRET=your_csrf_secret_key_min_32_chars
CSRF_TTL_MINUTES=15

# -----------------------------------------------------------------------------
# Initial Super Admin Setup
# -----------------------------------------------------------------------------
# These credentials are used ONLY for creating the first super admin account
# Run: npm run migrate:create-super-admin
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=changeme123456
SUPER_ADMIN_NAME=System Administrator

# -----------------------------------------------------------------------------
# Encryption
# -----------------------------------------------------------------------------
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# -----------------------------------------------------------------------------
# GitHub OAuth
# -----------------------------------------------------------------------------
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# -----------------------------------------------------------------------------
# Gmail OAuth2 (for sending emails)
# -----------------------------------------------------------------------------
GMAIL_CLIENT=your_gmail_oauth_client_id
GMAIL_SECRET=your_gmail_oauth_client_secret
GMAIL_EMAIL=your_gmail_email@gmail.com
GMAIL_REFRESH=your_gmail_refresh_token
GMAIL_ACCESS=your_gmail_access_token

# -----------------------------------------------------------------------------
# Stripe (for payments)
# -----------------------------------------------------------------------------
STRIPE_TEST_KEY=sk_test_your_stripe_key
STRIPE_WHSEC=whsec_your_webhook_secret

# -----------------------------------------------------------------------------
# Telegram Integration
# -----------------------------------------------------------------------------
TELEGRAM_API_TOKEN=your_telegram_bot_token

# -----------------------------------------------------------------------------
# Google OAuth (for custom return emails)
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# -----------------------------------------------------------------------------
# CAPTCHA Challenge Configuration
# -----------------------------------------------------------------------------
HMAC=your_hmac_secret_key         # Secret for signing CAPTCHA challenges

# -----------------------------------------------------------------------------
# Testing Configuration (optional, used in test files)
# -----------------------------------------------------------------------------
# API_KEY=test_api_key_for_testing
# GITHUB_ID=test_github_id

# -----------------------------------------------------------------------------
# Optional Integrations
# -----------------------------------------------------------------------------
# VRBO_ICAL_URL=https://your-vrbo-ical-url  # For /fetch-ical endpoint
