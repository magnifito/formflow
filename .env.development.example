# =============================================================================
# FormFlow Development Environment Configuration
# =============================================================================
# Copy this file to .env.development and fill in the values for your environment.
# Never commit real secrets to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
DASHBOARD_API_PORT=4000
LOG_LEVEL=debug                   # debug, info, warn, error

# -----------------------------------------------------------------------------
# Development Defaults
# -----------------------------------------------------------------------------
REDIRECT_URL=http://localhost:4200
DASHBOARD_API_URL=http://localhost:4000
EMAIL_USER=test@localhost

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5433
DB_NAME=formflow
DB_USER=formflow
DB_PASSWORD=formflow_dev_password

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=dev_jwt_secret_not_for_production

# -----------------------------------------------------------------------------
# CSRF Protection (Form Submissions)
# -----------------------------------------------------------------------------
# Set CSRF_SECRET to enable CSRF tokens for /submit/:submitHash
CSRF_SECRET=dev_csrf_secret_not_for_production
CSRF_TTL_MINUTES=15

# -----------------------------------------------------------------------------
# Job Queue Configuration
# -----------------------------------------------------------------------------
QUEUE_ENABLED=true

# -----------------------------------------------------------------------------
# Initial Super Admin Setup
# -----------------------------------------------------------------------------
# These credentials are used ONLY for creating the first super admin account
# Run: npm run migrate:create-super-admin
SUPER_ADMIN_EMAIL=admin@formflow.fyi
SUPER_ADMIN_PASSWORD=password123
SUPER_ADMIN_NAME=System Administrator

# -----------------------------------------------------------------------------
# Encryption
# -----------------------------------------------------------------------------
ENCRYPTION_KEY=dev_encryption_key_not_for_production

# -----------------------------------------------------------------------------
# GitHub OAuth
# -----------------------------------------------------------------------------
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Gmail OAuth2 (for sending emails)
# -----------------------------------------------------------------------------
# GMAIL_CLIENT=
# GMAIL_SECRET=
# GMAIL_EMAIL=your_gmail_email@gmail.com
# GMAIL_REFRESH=
# GMAIL_ACCESS=

# -----------------------------------------------------------------------------
# Stripe (for payments)
# -----------------------------------------------------------------------------
# STRIPE_TEST_KEY=
# STRIPE_WHSEC=

# -----------------------------------------------------------------------------
# Telegram Integration
# -----------------------------------------------------------------------------
# TELEGRAM_API_TOKEN=

# -----------------------------------------------------------------------------
# Slack Integration
# -----------------------------------------------------------------------------
# SLACK_BOT_TOKEN=xoxb-your-bot-token

# -----------------------------------------------------------------------------
# Google OAuth (for custom return emails)
# -----------------------------------------------------------------------------
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# CAPTCHA Challenge Configuration
# -----------------------------------------------------------------------------
HMAC=dev_hmac_secret_not_for_production

# -----------------------------------------------------------------------------
# Testing Configuration (optional, used in test files)
# -----------------------------------------------------------------------------
# API_KEY=test_api_key_for_testing
# GITHUB_ID=test_github_id

# -----------------------------------------------------------------------------
# Optional Integrations
# -----------------------------------------------------------------------------
# VRBO_ICAL_URL=https://your-vrbo-ical-url  # For /fetch-ical endpoint
# TELEGRAM_BOT_TOKEN=7587108286:AAEFxxnna7qTeZzAnAjvRneZzvgb5osYSo4

# -----------------------------------------------------------------------------
# Email Configuration (for development using Mailpit)
# -----------------------------------------------------------------------------
# Use Mailpit at http://localhost:8025 to view sent emails
EMAIL_PROVIDER=localhost
MAILPIT_HOST=127.0.0.1
SMTP_PORT=1026
EMAIL_USER=test@localhost
EMAIL_PASSWORD=
EMAIL_TO=test@localhost
GMAIL_TRUE=False
