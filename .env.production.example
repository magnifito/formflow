# =============================================================================
# FormFlow Production Environment Configuration
# =============================================================================
# Copy this file to .env.production and fill in the values for your environment.
# Never commit real secrets to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
NODE_ENV=production
PORT=3000
LOG_LEVEL=info                    # debug, info, warn, error

# -----------------------------------------------------------------------------
# Production Defaults
# -----------------------------------------------------------------------------
REDIRECT_URL=https://your-dashboard-domain.com
DASHBOARD_API_URL=https://your-dashboard-api-domain.com
EMAIL_USER=your-email@example.com

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
DB_HOST=your_production_host
DB_PORT=5432
DB_NAME=formflow
DB_USER=formflow
DB_PASSWORD=your_production_password

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=your_jwt_secret_key_min_32_chars

# -----------------------------------------------------------------------------
# CSRF Protection (Form Submissions)
# -----------------------------------------------------------------------------
# Set CSRF_SECRET to enable CSRF tokens for /submit/:submitHash
CSRF_SECRET=your_csrf_secret_key_min_32_chars
CSRF_TTL_MINUTES=15

# -----------------------------------------------------------------------------
# Initial Super Admin Setup
# -----------------------------------------------------------------------------
# These credentials are used ONLY for creating the first super admin account
# Run: npm run migrate:create-super-admin
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=changeme123456
SUPER_ADMIN_NAME=System Administrator

# -----------------------------------------------------------------------------
# Encryption
# -----------------------------------------------------------------------------
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# -----------------------------------------------------------------------------
# GitHub OAuth
# -----------------------------------------------------------------------------
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# -----------------------------------------------------------------------------
# Gmail OAuth2 (for sending emails)
# -----------------------------------------------------------------------------
# GMAIL_CLIENT=
# GMAIL_SECRET=
# GMAIL_EMAIL=your_gmail_email@gmail.com
# GMAIL_REFRESH=
# GMAIL_ACCESS=

# -----------------------------------------------------------------------------
# Stripe (for payments)
# -----------------------------------------------------------------------------
# STRIPE_TEST_KEY=sk_test_your_stripe_key
# STRIPE_WHSEC=whsec_your_webhook_secret

# -----------------------------------------------------------------------------
# Telegram Integration
# -----------------------------------------------------------------------------
# TELEGRAM_API_TOKEN=your_telegram_bot_token

# -----------------------------------------------------------------------------
# Google OAuth (for custom return emails)
# -----------------------------------------------------------------------------
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# -----------------------------------------------------------------------------
# CAPTCHA Challenge Configuration
# -----------------------------------------------------------------------------
HMAC=your_hmac_secret_key

# -----------------------------------------------------------------------------
# Optional Integrations
# -----------------------------------------------------------------------------
# VRBO_ICAL_URL=https://your-vrbo-ical-url  # For /fetch-ical endpoint
