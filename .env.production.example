# =============================================================================
# FormFlow Production Environment Configuration
# =============================================================================
# Copy this file to .env.production and fill in the values for your environment.
# Never commit real secrets to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
NODE_ENV=production
DASHBOARD_API_PORT=4000
COLLECTOR_API_PORT=3000
LOG_LEVEL=info                    # debug, info, warn, error
# Domain Configuration (Required for Dokploy/Traefik)
COLLECTOR_API_DOMAIN=submit.formflow.fyi
DASHBOARD_UI_DOMAIN=dashboard.formflow.fyi

# -----------------------------------------------------------------------------
# Production Defaults
# -----------------------------------------------------------------------------
REDIRECT_URL=https://formflow.fyi
DASHBOARD_API_URL=http://dashboard-api:4000
EMAIL_USER=admin@formflow.fyi

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
DB_HOST=postgres
DB_PORT=5432
DB_NAME=formflow
DB_USER=formflow
DB_PASSWORD=your_production_password

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=your_jwt_secret_key_min_32_chars

# -----------------------------------------------------------------------------
# CSRF Protection (Form Submissions)
# -----------------------------------------------------------------------------
# Set CSRF_SECRET to enable CSRF tokens for /submit/:submitHash
CSRF_SECRET=your_csrf_secret_key_min_32_chars
CSRF_TTL_MINUTES=15

# -----------------------------------------------------------------------------
# System Notifications Email Configuration
# -----------------------------------------------------------------------------
SYSTEM_MAIL_HOST=127.0.0.1
SYSTEM_MAIL_SMTP_PORT=1026
SYSTEM_MAIL_USER=test@localhost
SYSTEM_MAIL_PASSWORD=
SYSTEM_MAIL_TO=test@localhost


