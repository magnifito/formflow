{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "lib": [
            "es2019"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "resolveJsonModule": true,
        "outDir": "../../../dist/out-tsc",
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts"
    ],
    "references": [
        {
            "path": "../../shared/entities"
        },
        {
            "path": "../../shared/queue"
        }
    ]
}
