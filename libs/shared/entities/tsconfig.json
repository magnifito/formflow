{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "ES2022"
    ],
    "declaration": true,
    "declarationMap": true,
    "outDir": "../../dist/out-tsc",
    "rootDir": "src",
    "baseUrl": "../../"
  },
  "skipLibCheck": true,
  "strict": false,
  "esModuleInterop": true,
  "resolveJsonModule": true,
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}